# CloudStream Environment Configuration

# Database Configuration
DATABASE_URL="postgresql://cloudstream:cloudstream123@localhost:5432/cloudstream"

# Redis Configuration
REDIS_URL="redis://:cloudstream123@localhost:6379"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRY="24h"
REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
REFRESH_EXPIRY="7d"

# Steam API
STEAM_API_KEY="your-steam-api-key-from-steamcommunity.com"

# Application Settings
NODE_ENV="development"
PORT=3001
CORS_ORIGIN="http://localhost:3000"

# Frontend URLs
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_WS_URL="ws://localhost:3002"

# Streaming Configuration
SUNSHINE_PORT=47989
STREAMING_QUALITY="1080p"
STREAMING_FPS=60
STREAMING_BITRATE=20000

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
LOG_LEVEL="info"

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Email (Optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@cloudstream.local"

# Docker Compose Overrides
COMPOSE_PROJECT_NAME="cloudstream"
COMPOSE_FILE="docker-compose.yml" 