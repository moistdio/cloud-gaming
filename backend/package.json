{
  "name": "cloud-gaming-backend",
  "version": "1.0.0",
  "description": "Backend service for cloud gaming platform",
  "type": "module",
  "main": "src/index.ts",
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "scripts": {
    "start": "NODE_OPTIONS='--loader ts-node/esm' ts-node src/index.ts",
    "dev": "NODE_OPTIONS='--loader ts-node/esm' ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "prisma db seed"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.16",
    "nodemon": "^3.0.3",
    "prisma": "^5.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
